{% extends 'base.html.twig' %}

{% block content %}
    <div class="container col-md-6">
        <h3>Password Reset</h3>
        <p>If you have forgotten your password please enter your username below. We will then send you a link to reset your password.</p>

        <p>Your username will either be your email address or mobile number.</p>
        {{ form_start(form) }}
            <div class="col-md-12">
                <p>{{ form_widget(form.username, {'attr':{'placeholder':'Username'}}) }}
                    {{ form_errors(form.username) }}</p>
            </div>
            <div class="col-md-12">
                <p>{{ form_widget(form.submit, {'attr':{'class':'btn btn-success'}}) }}</p>
            </div>

        {{ form_end(form) }}
    </div>
{% endblock %}