{% extends 'base.admin.menu.html.twig' %}

{% block body %}

<div class="col-lg-12">
	<div class="settings">

		<div class="col-xs-12 no-left">
			<div class="row col-xs-12 margin-vertically no-left">
				<h4>Terms and Conditions</h4>
			</div>
		</div>

		
		<div class="col-md-12 filterBox2">
			<form method="POST">
				<label for="formname">Add New T&amp;C: </label>
				<input type='text' name='title'/>
				<button class=" btn btn-black btn-xs">Add</button>
			</form>
		</div>
	

		<div class="row">
			<table class="dataTable noleft">
				<thead>
					<tr>
						<th class='ui-state-default ui-corner-tl'>Title</th>
						<th class='ui-state-default'>Assigned Jobs</th>
						<th class='ui-state-default ui-corner-tr'>Options</th>
					</tr>
				</thead>
				<tbody>
					{% if terms %}
						{% for t in terms %}
							<tr>
								<td>{{t.title}}</td>
								<td>{{t.cnt}}</td>
								<td>
									<a href='/terms/edit/{{t.id}}' class='btn btn-black btn-small'><i class="fa fa-edit"></i> Edit</a>
									<a href='/terms/delete/{{t.id}}' class='delete btn btn-black btn-small'><i class="fa fa-trash"></i> Delete</a>
									<a href='/terms/assign/{{t.id}}' class='btn btn-black btn-small'><i class="fa fa-list"></i> Assign Jobs</a>									
								</td>
							</tr>
						{% endfor %}
					{% else %}
						<tr><td colspan="3" class='noresults'>No terms found</td></tr>
					{% endif %}
				</tbody>
			</table>
		</div>

				
	</div>
</div>

				
<script>
$(document).ready(function() {
    $('.delete').click(function() { return confirm("Are you sure you wish to delete these Terms?"); } );
});
</script>


{% endblock %}
