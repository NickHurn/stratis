{% extends 'base2.html.twig' %}

{% block body %}

<style type='text/css'>
div.pcdropdown {
    position:absolute; width:300px; height:300px; border-radius:3px; border:1px solid #aaa;
    z-index:10;background-color:#f4f4f4; display:none;
}
label.control-label.required { display: block; }
#user_edit_postcode { width: 12em; display:inline-block; margin-right: 5px; }
select.pcode { height:2em; font-size:.85em; background-color: #f5f5f5; }
</style>

<div class="row">
	
	<div class="col-md-6 offset-md-3">
		<div class="settings">
			<div class="title job">
				<h2>Your Profile</h2>
			</div>
		</div>
	</div>

	<div class="col-md-6 offset-md-3 margin-top">


			{% for flash_message in app.session.flashBag.get('success') %}
				<div class="alert alert-success">
					{{ flash_message }}
				</div>
			{% endfor %}

			{{ form_start(form) }}
			{{ form_widget(form) }}
			{{ form_end(form) }}

	</div>

</div>

<script src='/js/getpostcode.js'></script>
<script>
$('#user_edit_postcode').postcodelookup('pcode', ['user_edit_line1','user_edit_line2','user_edit_town','user_edit_county']);
</script>

{% endblock %}
