{% extends 'base.admin.menu.html.twig' %}

{% block body %}

<style type='text/css'>
div.pcdropdown {
    position:absolute; width:300px; height:300px; border-radius:3px; border:1px solid #aaa;
    z-index:10;background-color:#f4f4f4; display:none;
}
label.control-label.required { display: block; }
#user_edit_no_gdpr_postcode { width: 12em; display:inline-block; margin-right: 5px; }
select.pcode { height:2em; font-size:.85em; background-color: #f5f5f5; }
</style>

<script src="https://webrtc.github.io/adapter/adapter-latest.js"></script>


<div class="row col-xs-12">
	
	<div class="tab-content">
		<div class="settings">
			<h4>Edit &raquo; {{title}}</h4>
		</div>
	</div>

	<div class="row col-xs-12 margin-top">
		<div class="row col-lg-6 col-md-9">
			{% for flash_message in app.session.flashBag.get('error') %}
				<div class="alert alert-error">
					{{ flash_message }}
				</div>
			{% endfor %}

			{{ form_start(form) }}
			{{ form_widget(form) }}
			{{ form_end(form) }}
		</div>
	</div>

</div>

		
<script src='/js/getpostcode.js'></script>
<script>
$('#user_edit_no_gdpr_postcode').postcodelookup('pcode', ['user_edit_no_gdpr_line1','user_edit_no_gdpr_line2','user_edit_no_gdpr_town','user_edit_no_gdpr_county']);
</script>

{% endblock %}
