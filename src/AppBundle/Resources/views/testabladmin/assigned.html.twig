{% extends 'base.admin.menu.html.twig' %}

{% block body %}

<div class="col-lg-12">
	<div class="settings">

		<div class="col-xs-12 no-left">
			<div class="row col-xs-12 margin-vertically no-left">
				<h4>Jobs &raquo; {{title}} &raquo; Assigned Tests</h4>
			</div>
		</div>

		
		<div class="col-xs-12">
			<div class="row checklist">
				<small><i>
					The following tests are assigned to this job. To modify this list, go to the <a href='/testabladmin/assign'>Testabl Assign Tests</a>
					page and assign jobs from there.
				</i></small>
			</div>
			
			{% if tests %}
				<ul>
				{% for t in tests %}
					<li>{{ t.formName }}</li>
				{% endfor %}
				</ul>
			{% else %}
				<div class="no-left" style="margin-top:25px">There are no tests assigned to this job.</div>
			{% endif %}
		</div>	

		<div class="col-xs-12" style="margin-top:25px">
			<a class='btn btn-black btn-xs' onclick='history.back(-1)' href='#'>Return to previous screen</a>
		</div>
	</div>
</div>

{% endblock %}
