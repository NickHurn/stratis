{% block customJavascripts %}
    <script>
        $(document).ready(function () {
            $('#url').attr('value', document.referrer);

            $('#dbs1c').click(function (event) {
                event.preventDefault();
                dbsclick(this);
            });
            $('#dbs2c').click(function (event) {
                event.preventDefault();
                dbsclick(this);
            });
            $('#dbs3c').click(function (event) {
                event.preventDefault();
                dbsclick(this);
            });
            $('#dbs4c').click(function (event) {
                event.preventDefault();
                dbsclick(this);
            });
            $('#dbs5c').click(function (event) {
                event.preventDefault();
                dbsclick(this);
            });
            $('#id1c').click(function (event) {
                event.preventDefault();
                idclick(this);
            });
            $('#id2c').click(function (event) {
                event.preventDefault();
                idclick(this);
            });
            $('#id3c').click(function (event) {
                event.preventDefault();
                idclick(this);
            });
            $('#id4c').click(function (event) {
                event.preventDefault();
                idclick(this);
            });
            $('#id5c').click(function (event) {
                event.preventDefault();
                idclick(this);
            });

            $(function () {
                $('.button-checkbox').each(function () {

                    // Settings
                    var $widget = $(this),
                        $button = $widget.find('button'),
                        $checkbox = $widget.find('input:checkbox'),
                        color = $button.data('color'),
                        settings = {
                            on: {
                                icon: 'glyphicon glyphicon-check'
                            },
                            off: {
                                icon: 'glyphicon glyphicon-unchecked'
                            }
                        };

                    // Event Handlers
                    $button.on('click', function () {
                        //if(propogate==false) return;
                        console.log("click()");
                        $checkbox.prop('checked', !$checkbox.is(':checked'));
                        $checkbox.triggerHandler('change');
                        updateDisplay();
                    });
                    $checkbox.on('change', function () {
                        //if(propogate==false) return;
                        console.log("change()");
                        updateDisplay();
                    });

                    // Actions
                    function updateDisplay() {
                        console.log("updateDisplay()");
                        var isChecked = $checkbox.is(':checked');

                        // Set the button's state
                        $button.data('state', (isChecked) ? "on" : "off");

                        // Set the button's icon
                        $button.find('.state-icon')
                            .removeClass()
                            .addClass('state-icon ' + settings[$button.data('state')].icon);

                        // Update the button's color
                        if (isChecked) {
                            $button
                                .removeClass('btn-default')
                                .addClass('btn-' + color + ' active');
                        } else {
                            $button
                                .removeClass('btn-' + color + ' active')
                                .addClass('btn-default');
                        }
                    }

                    // Initialization
                    function init() {

                        updateDisplay();

                        // Inject the icon if applicable
                        if ($button.find('.state-icon').length == 0) {
                            $button.prepend('<i class="state-icon ' + settings[$button.data('state')].icon + '"></i>Â ');
                        }
                    }

                    init();
                });
            });

        });


        var propogate = true;

        function dbsclick(obj) {
            if (propogate == false) return;
            propogate = false;

            var n = obj.id.substr(3, 1);
            for (var i = 1; i <= 5; i++) {
                if (n == i) continue;
                var objid = '#dbs' + i + 'c';
                var chkid = '#dbs' + i;
                var x = $(chkid).is(":checked");
                if (x == true) {
                    $(objid).click();
                }
            }

            objid = '#dbs' + n;
            x = $(objid).is(":checked");
            if (x) {
                $(objid).click();
            }
            propogate = true;
        }


        function idclick(obj) {
            if (propogate == false) return;
            propogate = false;

            var n = obj.id.substr(2, 1);
            for (var i = 1; i <= 5; i++) {
                if (n == i) continue;
                var objid = '#id' + i + 'c';
                var chkid = '#id' + i;
                var x = $(chkid).is(":checked");
                if (x == true) {
                    $(objid).click();
                }
            }

            objid = '#id' + n;
            x = $(objid).is(":checked");
            if (x) {
                $(objid).click();
            }
            propogate = true;
        }


    </script>
{% endblock %}
