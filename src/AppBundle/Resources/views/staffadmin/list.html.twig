{% extends 'base.admin.menu.html.twig' %}

{% block body %}

<div class="col-lg-12">
	<div class="settings">

		<div class="col-xs-12 no-left">
			<div class="row col-xs-12 margin-vertically">
				<h4>Staff List</h4>
			</div>
		</div>

		
		<div class="col-md-12 no-left genericmargin">
			<a href='/staff/edit/new' class=" btn btn-black btn-sm">Add New</a>
		</div>

		
		<div class="row">
			<table class="dataTable">
				<thead>
					<tr>
						<th class='ui-state-default ui-corner-tl'>First Name</th>
						<th class='ui-state-default'>Surname</th>
						<th class='ui-state-default'>Email</th>
						<th class='ui-state-default ui-corner-tr'>Options</th>
					</tr>
				</thead>
				<tbody>
					{% if staff %}
						{% for s in staff %}
							<tr>
								<td>{{s.firstname}}</td>
								<td>{{s.surname}}</td>
								<td>{{s.emailaddress}}</td>
								<td>
									<a href='/staff/edit/{{s.id}}' class='btn btn-black btn-small'><i class="fa fa-edit"></i> Edit</a>
									{% if s.id != id %}
										<a href='/staff/delete/{{s.id}}' class='delconfirm btn btn-black btn-small'><i class="fa fa-minus-square"></i> Delete</a>
									{% endif %}
								</td>
							</tr>
						{% endfor %}
					{% endif %}
				</tbody>
			</table>
		</div>

				
	</div>
</div>


<script>
$(function() {
	$(".delconfirm").click(function() {
		return confirm("Are you sure you wish to delete this user?");
	});
});
</script>
						
{% endblock %}
