{% extends 'base2.html.twig' %}

{% block customStylesheets %}
	<style>
		.announce { font-size: 18px; margin: 20px 0; }
	</style>
{% endblock %}
{% block body %}
<div class="container ml-auto mr-auto mt-4 mb-4 ">
	<div class="mt-5 col-lg-8 offset-lg-2 col-md-8 offset-md-2">
		<div class="row ml-auto mr-auto">
			<div class="jd col-sm-12">
				<div class='title checkabl'>
					<h2>Checkabl &raquo; Upload CV</h2>
				</div>
				{% if error %}
					<div class="col-md-12 bg-danger text-white rounded-8 p-2">
						{{ error }}
					</div>
				{% endif %}

				<br clear='all'/>
				<div class="col-lg-12">
					<div class="settings">
						<div class="row ">
							<div class="note">
								Please upload your C.V. in DOC, PDF format.
								Files must be maximum of 3MB in size.
							</div>
							<form method="post" enctype="multipart/form-data">
								<input type="hidden" name="chk" value="1"/>
								<input type="file" name="tmpfile" class="btn btn-black appBtn-black appBtn">
								<div style='margin-top:30px'>
									<input type="submit" class="btn btn-black appBtn appBtn-black" value="Upload"/>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


{% endblock %}
	








