{% extends 'base2.html.twig' %}
{% block customStylesheets %}
	<style>
		.announce { font-size: 18px; margin: 20px 0; }
	</style>
{% endblock %}
{% block body %}
<div class="container ml-auto mr-auto mt-4 mb-4 ">
	<div class="mt-5 col-lg-8 offset-lg-2 col-md-8 offset-md-2">
		<div class="row ml-auto mr-auto">
			<div class="jd col-sm-12">
				<div class='title checkabl'>
					<h2>Checkabl &raquo; Employment History</h2>
				</div>
				<br/>
				<div class="col-lg-12">
					<div class="settings">
						<div class="row ">
							<div class='note'>
								Press the <b>Save Changes and Return</b> button to save your work without submitting it.<br/>
								After pressing <b>Finalise and Submit</b> you will not be able to make further changes.
							</div>
							<div class="col-sm-12 pt-5 pl-0">
								<form method="post">
									{{ form_widget(form) }}
									<input type='submit' name='submit' class='btn btn-black appBtn appBtn-black' value='Save Changes and Return'/>
									<input type='submit' name='submit' class='btn btn-black appBtn appBtn-black' style='margin-left:50px' value='Finalise and Submit'/>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}
{% block customJavascripts %}
	<script>
		$( document ).ready(function() {
			$('#form_enddate1').addClass('datepicker');
			$('#form_startdate1').addClass('datepicker');
			$('#form_enddate2').addClass('datepicker');
			$('#form_startdate2').addClass('datepicker');
			$('#form_enddate3').addClass('datepicker');
			$('#form_startdate3').addClass('datepicker');
			$('#form_enddate4').addClass('datepicker');
			$('#form_startdate4').addClass('datepicker');
			$('#form_enddate5').addClass('datepicker');
			$('#form_startdate5').addClass('datepicker');
			$('.datepicker').datepicker({
				dateFormat: 'dd/mm/yy',
				changeMonth: true,
				changeYear: true
			});
			$('#form_description1').addClass('margin-multiform');
			$('#form_description2').addClass('margin-multiform');
			$('#form_description3').addClass('margin-multiform');
			$('#form_description4').addClass('margin-multiform');
			$('#form_description5').addClass('margin-multiform');
		});
	</script>
{% endblock %}
